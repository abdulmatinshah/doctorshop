<ul>
  <% if ::Refinery::Quotations::Admin::QuotationsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.quotations_admin_quotations_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_quotations_admin_quotation_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Quotations::Admin::QuotationsController.sortable? && ::Refinery::Quotations::Quotation.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Quotations"),
                 refinery.quotations_admin_quotations_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Quotations"),
                 refinery.quotations_admin_quotations_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
